// Day View - Room Table Display
.table
  border 0.1rem solid mediumGrey
  border-collapse collapse !important
  border-spacing 0 0 !important
  -webkit-box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  -moz-box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  color darkGrey
  display table
  margin 1rem auto
  max-height 100%
  table-layout fixed
  width 100%
  &--nested
    border none
    -webkit-box-shadow unset
    -moz-box-shadow unset
    box-shadow unset
    margin 0
    width 100%
  &__body
    display table-row-group
  &__row
    display table-row
    border 0.1rem solid mediumGrey
    height 6.8rem
    &:hover
      background lightGrey
      border 0.1rem solid mediumGrey
      -webkit-box-shadow 2px 2px 5px 0px rgba(206,206,206,1)
      -moz-box-shadow 2px 2px 5px 0px rgba(206,206,206,1)
      box-shadow 2px 2px 5px 0px rgba(206,206,206,1)
    &--header
      font-size 2rem
      font-weight bold
      height 6rem
      line-height 1.5
      margin 0 auto
    &--level
      &:hover
        background mediumGrey
        border 0.1rem solid mediumGrey
        -webkit-box-shadow unset
        -moz-box-shadow unset
        box-shadow unset
    &--subheader
      background lightGrey
      font-weight bold
      height 4rem
      line-height 2.5
      text-align center
      &:hover
        -webkit-box-shadow unset
        -moz-box-shadow unset
        box-shadow unset
  &__cell
    background offWhite
    border 0.1rem solid mediumGrey
    cursor pointer
    display table-cell
    height 8rem
    // width 100%
    &:hover
      border none
    &--column
      padding 0 1rem
      text-align left
      vertical-align middle
    &--booked // Styling for timeslots that have been booked
      display block
      height inherit
      // width 100%
    &--business-unit-1
      background businessUnit1
      cursor pointer
      height inherit
    &--business-unit-2
      background businessUnit2
      cursor pointer
      height inherit
    &--business-unit-3
      background businessUnit3
      cursor pointer
      height inherit
    &--business-unit-4
      background businessUnit4
      cursor pointer
      height inherit
    &--business-unit-5
      background businessUnit5
      cursor pointer
      height inherit
    &--header
      border 0.1rem solid mediumGrey
      display table-cell
      font-weight 600
    &--left
      border-right 0.05rem solid mediumGrey
      cursor pointer
      display inline-block
      height 100%
      width calc((100% / 2) - 0.05rem)
    &--level
      background mediumGrey
      display table-cell
      font-size 2.2rem
      padding 0 1rem
      vertical-align middle
    &--right
      border-left 0.05rem solid mediumGrey
      cursor pointer
      display inline-block
      height 100%
      width calc((100% / 2) - 0.05rem)
  &__column
    padding 0 1rem
    text-align left
    width 15%
  &__data
    &--asset // Assets in room
      display block
      font-family proxima
      font-size 1.4rem
      font-weight 400
      line-height 1
      text-align left
  &__link // Room name
    color darkGrey
    font-weight bold
    &:hover
      border-bottom 0.2rem solid darkGrey
      color darkGrey
    &--available // Available time slot - cell
      color darkGrey
      display inline-block
      height 100%
      padding 0
      width 100%
      &:hover
        border none
        text-decoration none
