@import url("https://use.typekit.net/jkj6uwy.css")
@require './_*.styl'
@require './*/_*.styl'

html
  // box-sizing border-box
  font-size 62.5%
  margin 0
  -webkit-margin-after 0
  -webkit-margin-end 0
  -webkit-margin-before 0
  -webkit-margin-start 0
  padding 0

body
  background lightGrey
  box-sizing border-box
  font-family proxima
  font-size 1.6rem
  -moz-osx-font-smoothing grayscale
  margin 0
  padding 0
  width 100%

a
  cursor pointer
  text-decoration none

ul
  margin 0 auto
  padding 0
  list-style-type none

li
  display inline-block

.wrapper
  display grid
  grid-gap 1rem
  grid-template-columns auto
  grid-template-rows 1fr auto
  width 100%

.wrapper__form
  display grid
  grid-template-columns auto
  grid-template-rows 1fr 3fr 1fr
  height 100vh
  margin 0 auto
  padding 0
  width 100%

.grid__container--form
  background offWhite
  -webkit-box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  -moz-box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  color darkGrey
  display grid
  grid-gap 1rem
  grid-row 2
  grid-template-columns 1fr
  grid-template-rows 1fr auto 1fr
  justify-self center
  padding 6rem 0
  width 60%

.grid__row
  min-width 60%
  margin 1rem auto
  &--link
    font-size 1.8rem
    text-align center

.wrapper__content
  display grid
  grid-column-gap 2%
  grid-row-gap 0
  grid-template-columns 24.5% 73.5%
  grid-template-rows 1fr auto
  margin 0 auto
  max-width 85%
  padding-bottom 10rem
  &--bookings
    display grid
    grid-gap 1rem
    grid-template-columns auto
    grid-template-rows 1fr auto
    margin 3rem

.wrapper__bookings
  background offWhite
  -webkit-box-shadow 1px 1px 5px 0px rgba(206,206,206,1)
  -moz-box-shadow 1px 1px 5px 0px rgba(206,206,206,1)
  box-shadow 1px 1px 5px 0px rgba(206,206,206,1)
  display grid
  grid-gap 1rem
  grid-template-columns auto 1fr
  grid-template-rows auto
  grid-column 1
  grid-row 2

.header
  background darkGrey
  -webkit-box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  -moz-box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
  grid-area header
  grid-column 1 / -1
  grid-row 1
  height 10rem
  width 100%
  &--flex
    align-items center
    display flex
    justify-content space-between
  &__page
    -ms-grid-column 1 / -1
    grid-column 1 / -1
    grid-column-start 1
    grid-column-end 3
    grid-row 1
  &__heading
    font-family raleway
    &--main
      color lightGrey
      font-size 3rem
      font-weight 600
      margin 0 3rem
    &--sub
      border-bottom 0.2rem solid darkGrey
      font-size 2.6rem
      font-weight 700
      margin 2.2rem 0 4.2rem 0
      padding 1rem 0
    &--sub--alt
      border-bottom 0.2rem solid darkGrey
      font-size 2.6rem
      font-weight 700
      margin 0 auto
      width 100%
    &--sidebar
      font-family proxima
      font-size 2rem
      font-weight 600
      margin 1rem 0
      padding 0
    &--column
      font-size 2.4rem
      text-align center
    &--small
        font-size 1.8rem
        margin 0 0
        width 28rem

.sidebar
  grid-area sidebar
  grid-column 1
  grid-row 2
  &__box
    background offWhite
    border 0.05rem solid mediumGrey
    border-radius 0.3rem
    -webkit-box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
    -moz-box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
    box-shadow 0px 2px 5px 0px rgba(206,206,206,1)
    margin 3rem auto
    width 26rem
    &:first-child
      margin 1rem auto

.content
  grid-area content
  grid-column 2
  grid-row 2

.footer
  grid-area footer

.modal__paragraph
  line-height 1.05
  padding 0

// Form Styles
.form--booking // make a Booking
  margin 1rem auto

.form
  &__group // group label and input
    margin 0 auto
    &--button // button group
      margin 2rem 0 3rem 0
    &--margin-top
      margin-top 3rem
  &__label
    display block
    font-size 1.8rem
    font-weight 600
    margin 1rem 0 0.8rem 0
    padding-bottom 0.4rem
    text-align left
    &--inline
      display inline-block
      font-size 1.6rem
      margin 0.3rem auto
      padding-left 1rem
    &--padding
      padding-bottom 0
    &--booking
      font-size 1.6rem
      padding 0
    &--filter
      font-weight normal

.form__input
  border 0.1rem solid mediumGrey
  display block
  font-size 1.6rem
  margin 0 auto
  padding 1.6rem 0.5rem
  width 100%
  &:active
  &:focus
    outline none
  &--time
    border 0.1em solid darkGrey
    display inline-block
    margin 1rem 0 1rem 1rem
    width 12rem
  &--select // https://codepen.io/vkjgr/pen/VYMeXp
    -webkit-appearance none
    -moz-appearance none
    appearance none
    background offWhite
    background-image:
      linear-gradient(45deg, transparent 50%, semiDarkGrey 50%),
      linear-gradient(135deg, semiDarkGrey 50%, transparent 50%),
      linear-gradient(to right, semiDarkGrey, semiDarkGrey)
    background-position:
      calc(100% - 20px) calc(1em + 2px),
      calc(100% - 15px) calc(1em + 2px),
      calc(100% - 2.5em) 0.5em
    background-size:
      5px 5px,
      5px 5px,
      1px 1.5em
    background-repeat no-repeat
    &:-moz-focusring
      color transparent
      text-shadow 0 0 0 darkGrey
    border 0.1rem solid semiDarkGrey
    display block
    font-size 1.4rem
    margin 0.5rem auto
    padding 0.8rem 3.8rem 0.8rem 1rem
    width 100%
  &--date
    background lightGrey
    border 0.1rem solid semiDarkGrey
    box-sizing border-box
    color darkGrey
    display block
    font-family raleway
    font-size 1.4rem
    height 3.8rem
    margin-top 0.4rem
    padding 0 1rem
    width 100%
  &--textarea
    border 0.1rem solid semiDarkGrey
    display block
    font-family raleway
    font-size 1.8rem
    height 6rem
    margin-top 0.4rem
    padding 0.5rem 0
    resize none
    width 100%

input
  &:focus
    outline none

input[type=checkbox]
  box-shadow none
  height 1.6rem
  width 1.6rem

input[type=radio]
  box-shadow none
  height 1.6rem
  width 1.6rem

.form__heading--filter
  margin 0.8rem 0

.button__form
  &--submit
    margin 1rem auto
    width 100%
  &--google
    margin 3rem auto
    width 30.6rem
  &--booking
    display inline-block
    font-size 1.4rem
    margin 0.8rem 0
    padding 1.6rem 0
    text-align center
    width 100%
    &:last-child
      margin-top 1.4rem

.booking__user-info
  grid-column 2
  grid-row 1
  line-height 1rem
  margin 2rem 3.5rem
  padding 1rem
  text-align center

.avatar
  border 0.1rem solid lightgray
  height 12rem
  margin 3.4rem auto
  text-align right
  width 10rem

.booking__box
  background lightGrey
  border 0.1rem solid mediumGrey
  display flex
  grid-column 1
  grid-row 1
  margin 5rem
  width 100%

.booking__innerbox
  &--left
    color darkGrey
    padding 0.5rem 2rem
    text-align left
    width 40%
  &--middle
    line-height 0.8em
    margin 3rem auto
    padding-top 3rem
    text-align left
    width 40%
  &--right
    margin 3rem auto
    padding-top 4.4rem
    width 20%
